<mapper namespace="com.yyc.my_pro.Dao.News_DAO">
    <sql id="table">news</sql>
    <sql id="selectFields">
      id,title, link, image, like_count, comment_count,created_date,user_id
    </sql>
    <select id="selectByUserIdAndOffset" resultType="com.yyc.my_pro.model.News">
        SELECT
        <include refid="selectFields"/>
        FROM
        <include refid="table"/>
        <if test="userId != 0">
            WHERE user_id = #{userId}
        </if>
        ORDER BY id DESC
        LIMIT #{offset},#{limit}
    </select>
</mapper>


